{
  "manifest_version": 3,
  "name": "Time Sync",
  "version": "1.1.0",
  "description": "Synchronize your computer time with NTP servers (NIST, Google, WorldTime)",
  "icons": {
    "16": "icons/image.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/image.png"
    },
    "default_title": "Time Sync"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://worldtimeapi.org/*",
    "https://timeapi.io/*",
    "https://www.google.com/*",
    "https://www.nist.gov/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["window.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
